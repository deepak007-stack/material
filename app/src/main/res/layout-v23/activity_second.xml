<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12151B"
    tools:context=".Second_activity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:background="@drawable/round_shape"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/arrow"
                    android:clickable="true"
                    android:focusable="true" />

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/social"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="@string/social_media_ndetox_challenge"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/social"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="7dp"
                        android:text="@string/_7_days"
                        android:textColor="#808191"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/day"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="45dp"
                        android:text="@string/_20_done"
                        android:textColor="#FFCE73"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/done"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="250dp"
                            android:src="@drawable/user" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/share" />

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/done"
                        android:layout_marginStart="9sp"
                        android:layout_marginTop="7dp"
                        android:progress="20"
                        android:progressBackgroundTint="@color/white"
                        android:progressTint="#FFCE73"
                        android:thumbTint="#FFCE73" />


                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="146dp"
                android:layout_height="128dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/layer5" />

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/day_1"
                    android:textColor="#808191"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="16dp"
                    android:background="#808191" />

                <RelativeLayout
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:background="@drawable/round_shap1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card3"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="18dp"
                            android:backgroundTint="#CDE7FF"
                            app:cardCornerRadius="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/img" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:text="@string/str1"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/card3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/card3"
                            app:layout_constraintTop_toTopOf="@+id/card3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout3"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="20dp"
                        android:text="@string/drink"
                        android:textColor="#808191"
                        android:textSize="16sp" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/circle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/day_1"
                    android:textColor="#808191"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l2"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="270dp"
                    android:layout_marginStart="16dp"
                    android:background="#808191" />

                <RelativeLayout
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:background="@drawable/round_shap1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card2"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="18dp"
                            android:backgroundTint="#D9977B"
                            app:cardCornerRadius="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/img" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:text="@string/str2"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/card2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/card2"
                            app:layout_constraintTop_toTopOf="@+id/card2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout4"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="20dp"
                        android:text="@string/drink2"
                        android:textColor="#808191"
                        android:textSize="16sp" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l3"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/circle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/day_1"
                    android:textColor="#808191"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l4"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="270dp"
                    android:layout_marginStart="16dp"
                    android:background="#808191" />

                <RelativeLayout
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_shap1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="18dp"
                            android:backgroundTint="#89B5AF"
                            app:cardCornerRadius="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/img" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:text="@string/str3"
                            app:layout_constraintBottom_toBottomOf="@+id/card"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/card"
                            app:layout_constraintTop_toTopOf="@+id/card"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout5"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="20dp"
                        android:text="@string/drink2"
                        android:textColor="#808191"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/btn"
       android:layout_width="328dp"
       android:layout_height="50dp"
       android:layout_alignParentBottom="true"
       android:background="@drawable/button_shape"
       android:layout_centerHorizontal="true"
       android:layout_marginVertical="10dp" />
       


</RelativeLayout>